source "https://rubygems.org"

ruby "4.0.1"

gem "rake"

# Web
gem "roda"
gem "rack"

# Database
gem "activerecord"
gem "pg"

# JSON & logging
gem "json"
gem "logger"

# Production server (recommended)
gem "puma"

group :development do 
  gem "pry-byebug"
end

group :test do 
  gem "rspec"
  gem "rack-test"
  gem "pry-byebug"
  gem 'shoulda-matchers'
end

